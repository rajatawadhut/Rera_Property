<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="05dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="05dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardviewbg"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/cardImage"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/linearname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp"
                        android:paddingTop="5dp">


                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimen5dp"
                            android:text="35 Lac"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="19sp"
                            android:textStyle="bold" />


                        <ImageView
                            android:id="@+id/message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/mail" />


                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/linearblood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/location"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:ellipsize="end"
                            android:src="@drawable/ic_location_on_black_24dp"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/s7"
                            android:paddingLeft="5dp"
                            android:paddingTop="1dp"
                            android:text="Address"
                            android:textColor="@color/black2"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearbhk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/bhk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/s7"
                            android:paddingLeft="5dp"
                            android:text="2 BHK"
                            android:textColor="@color/black2"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/listingfor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/s7"
                            android:paddingLeft="5dp"
                            android:text="Sell"
                            android:textColor="@color/black2"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/builtupa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/s7"
                            android:paddingLeft="5dp"
                            android:text="15000"
                            android:textColor="@color/black2"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/builtupaunit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/s7"
                            android:paddingLeft="5dp"
                            android:text="Sqft"
                            android:textColor="@color/black2"
                            android:textSize="10dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp">

                        <TextView
                            android:id="@+id/categorytype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/s7"
                            android:paddingLeft="5dp"
                            android:text="Residential Apartment"
                            android:textColor="@color/black2"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/s7"
                            android:paddingLeft="5dp"
                            android:text="Apartment"
                            android:textColor="@color/black2"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingTop="2dp">

                        <TextView
                            android:id="@+id/usertype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/s7"
                            android:text="Owner"
                            android:textColor="@color/black2"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/s7"
                            android:text=" : "
                            android:textColor="@color/black2"
                            android:textSize="8sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/s7"
                            android:text="Rajat"
                            android:textColor="@color/black2"
                            android:textSize="8sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lname"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:fontFamily="@font/s7"
                            android:text="Awadhut"
                            android:textSize="8sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/numbershare9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingRight="15dp">

                        <Button
                            android:id="@+id/viewnumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/home_btn_bg"
                            android:text="Call"
                            android:textAllCaps="false"
                            android:textColor="#fff"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="1dp">

                            <ImageView
                                android:visibility="gone"
                                android:padding="6dp"
                                android:background="@drawable/callbg111"
                                android:id="@+id/call_button"
                                android:layout_marginRight="15dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/call" />

                            <ImageView
                                android:backgroundTint="@color/colorPrimary"
                                android:gravity="right"
                                android:padding="6dp"
                                android:background="@drawable/sharebg111"
                                android:id="@+id/share_button"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:tint="@color/white"
                                android:src="@drawable/ic_share_black_24dp" />

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="15dp"
                        android:paddingBottom="2dp">

                        <ImageView
                            android:id="@+id/addimg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:paddingRight="15dp"
                            android:src="@drawable/addimg" />

                        <ImageView
                            android:id="@+id/edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/edit" />

                        <ImageView
                            android:id="@+id/delete"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/delete" />
                    </LinearLayout>


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImage"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/propertyimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_background"
                        android:scaleType="fitXY"
                        android:src="@drawable/villa" />

                    <ImageView
                        android:id="@+id/shortlisted"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shortlistedbg"
                        android:padding="@dimen/dimen4dp"
                        android:src="@drawable/shortlistedheart" />

                    <TextView
                        android:id="@+id/label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="3dp"
                        android:background="#4FD557"
                        android:paddingLeft="2dp"
                        android:paddingRight="3dp"
                        android:text="Rent"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        tools:ignore="RtlCompat" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="11sp"
                        android:layout_gravity="bottom"
                        android:background="#CE333030"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="   Posted On "
                            android:textColor="@android:color/white"
                            android:textSize="8sp" />


                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wed 27, 2020"
                            android:textColor="@android:color/white"
                            android:textSize="8sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
