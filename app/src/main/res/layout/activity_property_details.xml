<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPropertActivity.PropertyDetails">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient_bg"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Property Area :"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/plotarea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Area"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:background="@drawable/spinner_bg"
                    android:id="@+id/unit1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/built9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/builtuparea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Built Up Area"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:background="@drawable/spinner_bg"
                    android:id="@+id/unit2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/carpet9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/carpetarea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Carpet Area"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:background="@drawable/spinner_bg"
                    android:id="@+id/unit3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/bathbedbalconi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/bedroom9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Bedroom"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/bedroomspin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:background="@drawable/spinner_bg" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/bathromm9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Bathroom"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/bathroomspin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:background="@drawable/spinner_bg" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/balconies9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Balconies"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/balconiesspin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:background="@drawable/spinner_bg" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noofroom9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="No of Room"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/noofroomspin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:background="@drawable/spinner_bg" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/qualityrating9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Quality Rating"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/qualityratingspin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:background="@drawable/spinner_bg" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/flattype9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Flat type"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/flattypespin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:background="@drawable/spinner_bg" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_data_builder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:text="Flat type"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spi_flat_type"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dimen10dp"
                            android:background="@drawable/spinner_bg" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen3dp"
                        android:layout_marginRight="@dimen/dimen3dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:text="Nos"
                            android:textStyle="bold" />

                        <EditText
                            android:hint="Nos"
                            android:id="@+id/edt_flat_type_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen10dp"
                            android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:text="Add"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:id="@+id/btn_add_flat_type"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dimen15dp"
                            android:background="@drawable/button_bg" />
                    </LinearLayout>

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginBottom="@dimen/dimen5dp"
                    android:id="@+id/rv_flat_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/ll_studio_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Studio Appartment"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_weight="1"
                        android:hint="Nos"
                        android:gravity="center_vertical"
                        android:id="@+id/edt_studio_app_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_pent_house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Pent House"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_weight="1"
                        android:hint="Nos"
                        android:gravity="center_vertical"
                        android:id="@+id/edt_pent_house_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_row_house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Row House"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_weight="1"
                        android:hint="Nos"
                        android:gravity="center_vertical"
                        android:id="@+id/edt_row_house_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_duplex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Duplex"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_weight="1"
                        android:hint="Nos"
                        android:gravity="center_vertical"
                        android:id="@+id/edt_duplex_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Shop"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_weight="1"
                        android:hint="Nos"
                        android:gravity="center_vertical"
                        android:id="@+id/edt_shop_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_commercial_space"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Commercial Space"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_weight="1"
                        android:hint="Nos"
                        android:gravity="center_vertical"
                        android:id="@+id/edt_commercial_space_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/dimen10dp"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bank Loan"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_nationalized"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nationalized" />


                        <RadioButton
                            android:id="@+id/rb_private"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Private" />

                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/addrooms9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Other Rooms"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/poojaroom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="selectItem"
                            android:text="Pooja Room" />

                        <CheckBox
                            android:id="@+id/studyroom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="selectItem"
                            android:text="Study Room" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/servantroom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="selectItem"
                            android:text="Servant Room" />

                        <CheckBox
                            android:id="@+id/otherroom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="selectItem"
                            android:text="Others" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/furnishedspin9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Furnishing"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/furnishedspin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:paddingTop="5dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/furnisheditem9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/wardrobe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="selectItem"
                        android:text="Wardrobe" />

                    <CheckBox
                        android:id="@+id/kitchen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="selectItem"
                        android:text="Modular Kitchen" />

                    <CheckBox
                        android:id="@+id/fridge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="selectItem"
                        android:text="Fridge" />

                    <CheckBox
                        android:id="@+id/ac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="selectItem"
                        android:text="AC" />

                    <CheckBox
                        android:id="@+id/geyser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="selectItem"
                        android:text="Geyser" />

                    <CheckBox
                        android:id="@+id/dinning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="selectItem"
                        android:text="Dinning Table" />

                    <CheckBox
                        android:id="@+id/sofa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="selectItem"
                        android:text="Sofa" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/stove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="selectItem"
                        android:text="Stove" />

                    <CheckBox
                        android:id="@+id/washing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="selectItem"
                        android:text="Washing Machine" />

                    <CheckBox
                        android:id="@+id/water"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="selectItem"
                        android:text="Water Purifier" />

                    <CheckBox
                        android:id="@+id/microwave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="selectItem"
                        android:text="Microwave" />

                    <CheckBox
                        android:id="@+id/curtains"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="selectItem"
                        android:text="Curtains" />

                    <CheckBox
                        android:id="@+id/chimney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="selectItem"
                        android:text="Chimney" />

                    <CheckBox
                        android:id="@+id/exhaust"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="selectItem"
                        android:text="Exhaust Fan" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/totalfloor9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Floors:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/totalfloorspin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:paddingTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reserver9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reserved Parking"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/yespark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yes" />


                    <RadioButton
                        android:id="@+id/nopark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No" />

                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/rera9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RERA Register"
                    android:textSize="16sp"
                    android:textStyle="bold" />

